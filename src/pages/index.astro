---
import Layout from '../layouts/Layout.astro';
import { db, posts } from '../lib/db';
import { desc } from 'drizzle-orm';

// Query posts at build time, ordered by publishedAt descending
const allPosts = await db
  .select({
    id: posts.id,
    title: posts.title,
    company: posts.company,
    url: posts.url,
    publishedAt: posts.publishedAt,
    firecrawlData: posts.firecrawlData,
  })
  .from(posts)
  .orderBy(desc(posts.publishedAt));

// Helper to format date in Korean locale
const formatDate = (timestamp: Date) => {
  return new Intl.DateTimeFormat('ko-KR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(timestamp);
};

// Company badge colors mapping
const companyColors: Record<string, string> = {
  toss: 'bg-blue-100 text-blue-700',
  coupang: 'bg-green-100 text-green-700',
  daangn: 'bg-orange-100 text-orange-700',
  kakao: 'bg-yellow-100 text-yellow-700',
  naver: 'bg-emerald-100 text-emerald-700',
  line: 'bg-teal-100 text-teal-700',
  woowahan: 'bg-cyan-100 text-cyan-700',
};
---

<Layout>
  <div class="min-h-screen bg-gray-50 py-8">
    <div class="mx-auto max-w-4xl px-4">
      <!-- Header -->
      <header class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900">Tech Blog Posts</h1>
        <p class="mt-2 text-gray-600">
          Latest posts from Korean tech companies
        </p>
      </header>

      <!-- Feed -->
      <main class="space-y-4">
        {allPosts.map((post) => (
          <article class="rounded-lg border border-gray-200 bg-white p-6 shadow-sm transition-shadow hover:shadow-md">
            <!-- Company badge and date -->
            <div class="mb-3 flex items-center gap-2">
              <span class={`rounded px-2 py-1 text-xs font-semibold ${companyColors[post.company] || 'bg-gray-100 text-gray-700'}`}>
                {post.company}
              </span>
              <time class="text-sm text-gray-500">
                {formatDate(post.publishedAt)}
              </time>
            </div>

            <!-- Title with link -->
            <h2 class="mb-2 text-xl font-semibold text-gray-900">
              <a
                href={post.url}
                target="_blank"
                rel="noopener noreferrer"
                class="hover:text-blue-600 transition-colors"
              >
                {post.title}
              </a>
            </h2>

            <!-- Summary -->
            <p class="text-gray-600">
              {post.firecrawlData.summary}
            </p>

            <!-- Read more link -->
            <a
              href={post.url}
              target="_blank"
              rel="noopener noreferrer"
              class="mt-3 inline-flex items-center text-sm font-medium text-blue-600 hover:text-blue-700"
            >
              Read more
              <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </article>
        ))}
      </main>
    </div>
  </div>
</Layout>
